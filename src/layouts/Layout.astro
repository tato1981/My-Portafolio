---
// Importa los estilos globales
import "../styles/global.css";

// Props para el contenido de la página
const { 
  title = "Mi Portafolio", 
  description = "Portafolio personal de ingeniería de sistemas y ciberseguridad" 
} = Astro.props;

// Importa los componentes
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  
  <!-- Fuentes Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  
  <!-- Tailwind CSS (CDN - solo para desarrollo rápido; en producción usa build de Tailwind) -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Opcional: Configuración de Tailwind si necesitas personalizar -->
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            poppins: ['Poppins', 'sans-serif'],
          }
        }
      }
    }
  </script>
</head>
<body class="font-poppins bg-gradient-to-br from-indigo-950 via-purple-950 to-black text-white min-h-screen">
  
  <!-- Header -->
  <Header />

  <!-- Contenido principal -->
  <main class="container mx-auto px-4 py-16">
    <slot />
  </main>

  <!-- Footer -->
  <Footer />
</body>
</html>