---
// Importa los estilos globales
import "../styles/global.css";

// Props para el contenido de la página
const { 
  title = "Mi Portafolio", 
  description = "Portafolio personal de ingeniería de sistemas y ciberseguridad" 
} = Astro.props;

// Importa los componentes
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  
  <!-- Fuentes Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  
  <!-- Tailwind CSS (CDN - solo para desarrollo rápido; en producción usa build de Tailwind) -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Configuración de Tailwind con soporte para modo oscuro -->
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          fontFamily: {
            poppins: ['Poppins', 'sans-serif'],
          }
        }
      }
    }
  </script>
  
  <!-- Script para el modo oscuro -->
  <script is:inline>
    // Función para aplicar el tema
    function applyTheme(isDark) {
      if (isDark) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    }
    
    // Verificar si el usuario ya tiene una preferencia guardada
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme) {
      applyTheme(savedTheme === 'dark');
    } else {
      // Si no hay preferencia guardada, usar la preferencia del sistema
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      applyTheme(prefersDark);
      localStorage.setItem('theme', prefersDark ? 'dark' : 'light');
    }
    
    // Función para cambiar el tema
    function toggleTheme() {
      const isDark = document.documentElement.classList.contains('dark');
      applyTheme(!isDark);
      localStorage.setItem('theme', !isDark ? 'dark' : 'light');
    }
    
    // Hacer la función disponible globalmente
    window.toggleTheme = toggleTheme;
  </script>
  
  <style is:global>
    /* Estilos para el modo claro (por defecto) */
    :root {
      --bg-color: linear-gradient(to bottom right, #1e1b4b, #581c87, #000);
      --text-color: #ffffff;
      --card-bg: #2d2a5a;
      --header-bg: linear-gradient(to right, #4338ca, #7e22ce);
    }
    
    /* Estilos para el modo oscuro */
    .dark {
      --bg-color: #121212;
      --text-color: #e5e5e5;
      --card-bg: #1e1e1e;
      --header-bg: #1e1e1e;
    }
    
    body {
      background: var(--bg-color);
      color: var(--text-color);
      transition: background-color 0.3s ease, color 0.3s ease;
    }
  </style>
</head>
<body class="font-poppins min-h-screen">
  
  <!-- Header -->
  <Header />

  <!-- Contenido principal -->
  <main class="container mx-auto px-4 py-16">
    <slot />
  </main>

  <!-- Footer -->
  <Footer />
</body>
</html>