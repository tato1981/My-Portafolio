    <script>
        // Smooth scroll para el enlace "Volver Arriba"
        document.addEventListener('DOMContentLoaded', function() {
            const backToTopLink = document.querySelector('a[href="#top"]');
            if (backToTopLink) {
                backToTopLink.addEventListener('click', function(e) {
                    e.preventDefault();
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }

            // Generar partículas de fondo
            const particleCount = 40;
            const particlesContainer = document.getElementById('particles-container');

            if (particlesContainer) {
                for (let i = 0; i < particleCount; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'particle';

                    // Asignar estilos
                    Object.assign(particle.style, {
                        left: `${Math.random() * 100}%`,
                        animationDelay: `${Math.random() * 15}s`,
                        animationDuration: `${15 + Math.random() * 10}s`,
                        width: `${2 + Math.random() * 3}px`,
                        height: `${2 + Math.random() * 3}px`,
                        backgroundColor: ['rgba(59, 130, 246, 0.7)', 'rgba(139, 92, 246, 0.7)', 'rgba(6, 182, 212, 0.7)'][Math.floor(Math.random() * 3)]
                    });

                    particlesContainer.appendChild(particle);
                }
            }
        });
